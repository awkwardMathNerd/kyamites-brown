&i2c0 { /* feather I2C0 */
    compatible = "nordic,nrf-twim";  // this makes the bus an I2C bus
    status = "okay";
    clock-frequency = <I2C_BITRATE_FAST>;
    sda-pin = <26>;
    scl-pin = <27>;

    crickit: crickit@49 {
        compatible = "adafruit,crickit";
        reg = <0x49>;
        label = "CRICKIT";
    };
};

/ {
    pwr_tim: pwr-tim-ctrl {
		compatible = "power-timer";
		gpios = <&gpio1 1 GPIO_ACTIVE_HIGH>;
	};

    aliases {
		pwr = &pwr_tim;
	};
};

